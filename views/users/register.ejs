<h1>Register</h1>
<form action="/user/register" method="POST" enctype="multipart/form-data">
  <div class="form-row">
    <div class="form-item">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required />
    </div>
    <div class="form-item">
      <label for="password">Password</label>
      <input type="password" id="password" name="password" required />
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" required />
    </div>

    <div class="form-item">
      <label for="name">Job</label>
      <input type="text" id="job" name="job" required />
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label for="name">Years Of Experience</label>
      <input
        type="number"
        id="yearsOfExperience"
        name="yearsOfExperience"
        required
      />
    </div>
    <div class="form-item">
      <label for="name">Education Degree</label>
      <input type="text" id="educationDegree" name="educationDegree" required />
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label for="name">Nationality</label>
      <input type="text" id="nationality" name="nationality" required />
    </div>
    <div class="form-item">
      <label for="name">Place Of Residence</label>
      <input
        type="text"
        id="placeOfResidence"
        name="placeOfResidence"
        required
      />
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label for="name">Phone Number</label>
      <input type="number" id="phoneNumber" name="phoneNumber" required />
    </div>
    <div class="form-item">
      <label>image</label>
      <input type="file" name="image" />
      <!--name is cover not like in the database coverImageName because it's file not string -->
    </div>
  </div>
  <div class="form-row form-row-end btn-row">
    <a class="btn btn-danger" href="/user/login">Cancel</a>
    <button class="btn btn-primary" type="submit">Register</button>
  </div>
</form>
